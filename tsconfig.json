{
  "include": ["src/**/*.ts", "index.ts", "test/*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["definitions/*"]
    },
    "typeRoots": ["definitions", "node_modules/@types"],
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
		"experimentalDecorators": true,
		"importHelpers": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
    "no-unused-variable": [true, {"ignore-pattern": "^_"}].
		"outDir": "dist",
		"removeComments": false,
		"sourceMap": true,
		"strict": true,
		"target": "es6"
  }
}
